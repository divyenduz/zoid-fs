// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// With NixOS https://github.com/prisma/prisma/issues/3026
generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./fs.db"
}

model File {
  id         Int       @id @default(autoincrement())
  type       String // dir or file or symlink or link
  targetPath String    @default("") // only relevant for symlink otherwise empty
  mode       Int
  name       String
  dir        String
  path       String    @unique
  // fileType  String // text or binary
  uid        Int
  gid        Int
  atime      DateTime
  mtime      DateTime  @updatedAt
  ctime      DateTime  @default(now())
  Content    Content[]
}

model Content {
  id      Int   @id @default(autoincrement())
  content Bytes
  offset  Int
  size    Int
  file    File  @relation(fields: [fileId], references: [id], onDelete: Cascade)
  fileId  Int
}
